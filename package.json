    "helmet": "^7.1.0",
    "i18next": "^23.12.2",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^2.5.2",
    "imapflow": "^1.0.166",
    "mailparser": "^3.7.1",
    "nodemailer": "^6.9.14",
    "pg": "^8.12.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
